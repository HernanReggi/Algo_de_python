prom_vta_diario= 3000
vb_1= 0


for cantidad_vendedores in range(1,11):
    nombres_vendedores= str(input(f'Ingresar nombre del {cantidad_vendedores}º vendedor: '))
    for cant_boleta in range(1,4):
        valor_boleta= float(input(f'ingresar valor de la {cant_boleta}º boleta: '))
        vb_1 += valor_boleta
    if vb_1>= prom_vta_diario:
        print(f'el promedio de ventas del vendedor {nombres_vendedores} es: {vb_1 /3}$ \n'
              f'el vendedor {nombres_vendedores} supero la minima.')
    else:
        print(f'el promedio de ventas del vendedor {nombres_vendedores} es: {vb_1 /3}$ \n'
              f'el vendedor {nombres_vendedores} no superó la minima.')
    vb_1= 0
